<div>
	<% if flash[:errors] %>
		<% flash[:errors].full_messages.each do |e| %>
			<%= e %>
			<br>
		<% end %>
	<% end %>
</div>
<div id="signup-content">
    <div id="signup-steps">
        <ul>
            <li>Sign up</li>
            <li>Choose account</li>
            <li>Create profile</li>
        </ul>
    </div>
    <div id="signup-frame">
        <div id="signup-banner">
            <%= image_tag "gg-logo-lg-3d.png", :id => "banner-logo" %>
            <div id="banner-motto">Your esports network.</div>
        </div>
        <div id="signup-form">
            <%= form_for(@user) do |f| %>
    
            <%= f.text_field :name, placeholder: "Full name" %>
          
            <%= f.text_field :alias, placeholder: "Alias" %>
    
            <%= f.text_field :email, placeholder: "Email" %>
    
            <%= f.password_field :password, placeholder: "Password" %>
    
            <%= f.password_field :password_confirmation, placeholder: "Confirm password" %>
    
            <%= f.submit "Sign up" %>
            
            <% end %>
        </div>
    </div>
</div>