<%= form_for(@user) do |f| %>

  <%= f.label :alias %>
  <%= f.text_field :alias %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirm Password" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Update Profile" %>
<% end %>