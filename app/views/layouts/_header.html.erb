<header>
    <%= link_to image_tag("gg-logo.png"), "#", :id => "logo" %>
    <div id="header-search">
        <%= text_field_tag :search, params[:search], :placeholder => "Search for anything" %>
    </div>
    <nav id="header-right-nav">
        <ul id="header-nav-menu">
        <% if signed_in? %>
            <li class="clickable">
                <a href="#">Zack<i class="fa fa-caret-down"></i></a>
                <ul id="header-dropdown-menu">
                    <li><%= link_to "Profile", current_user %></li>
                    <li><%= link_to "Settings", '#' %></li>
                    <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
                </ul>
            </li>
        <% else %>
            <li id="signin" class="clickable" onclick="showSignIn();">Sign in</li>
        <% end %>
        </ul>
    </nav>
</header>